
@model IEnumerable<Product>

<div class="row pb-3">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-1 p-2 shadow border-top border-5 rounded">
						<img src="@product.ImageUrl" class="card-img-top rounded" />
						<div class="card-body pb-0" style="min-height:170px">
							<div class="pl-1">
								<p class="card-title h5 text-dark text-uppercase text-center ">@product.Title</p>
								<div class="row">
								<p class="card-title h6 text-warning text-center w-100">by <b>@product.Author</b></p>
								</div>
							</div>
							<div class="pl-1">
								<p class="text-dark text-center mb-0">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
							</div>
							<div class="pl-1">
								<p class="text-dark text-center">As Low As: <span>@product.Price100</span> </p>
							</div>
						</div>
						<div>
							<a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>
@model int

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-body">
            <h1 class="text-success"><i class="bi bi-check-circle-fill"></i> Payment Successful </h1>
            
            <hr>
            <h5>Order Details</h5>
            <p><strong>Order ID:</strong> @Model</p>
            <p><strong>Date:</strong> @DateTime.Now</p>
            <p class="lead">Thank you for your purchase. Your order has been successfully placed.</p>
            <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary mt-3">Return to Order Details</a>

        </div>
    </div>
</div>
@model Category

<form class="p-5 border mx-auto " method="post">
    <h2 class="pb-4 text-center">Create New Category</h2>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">

        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" class="form-control">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-6">
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}